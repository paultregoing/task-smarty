{
  "name": "phing/task-smarty",
  "description": "A task for generating output by using Smarty. Forked for POPP6/PHP8",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "LGPL-3.0-only",
  "type": "phing-extension",
  "authors": [
    {
      "name": "Siad Ardroumli",
      "email": "siad.ardroumli@gmail.com"
    }
  ],
  "require": {
    "php": ">= 7.1"
  },
  "require-dev": {
    "phing/phing": "3.0.x-dev",
    "smarty/smarty": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "Phing\\Tasks\\Ext\\": "src/"
    }
  },
  "extra": {
    "phing-custom-taskdefs": {
      "smarty": "Phing\\Tasks\\Ext\\SmartyTask"
    }
  }
}
